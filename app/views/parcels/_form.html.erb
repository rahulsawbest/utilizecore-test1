<%= form_with(model: parcel) do |form| %>
  <% if parcel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parcel.errors.count, "error") %> prohibited this parcel from being saved:</h2>

      <ul>
        <% parcel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Parcel::STATUS %>
  </div>

  <div class="field">
    <%= form.label :service_type_id %>
    <%= form.collection_select :service_type_id, ServiceType.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :payment_mode %>
    <%= form.select :payment_mode, Parcel::PAYMENT_MODE %>
  </div>

  <div class="field">
    <%= form.fields_for :sender do |sender_fields| %>
      <%= sender_fields.label :full_name %>
      <%= sender_fields.text_field :full_name %>
    <% end %>

    <%= form.fields_for :sender do |sender_fields| %>
      <%= sender_fields.label :address %>
      <%= sender_fields.text_area :address %>
    <% end %>

    <%= form.fields_for :sender do |sender_fields| %>
      <%= sender_fields.label :mobile %>
      <%= sender_fields.text_field :mobile %>
    <% end %>

    <%= form.fields_for :sender do |sender_fields| %>
      <%= sender_fields.label :pincode %>
      <%= sender_fields.text_field :pincode %>
    <% end %>
  </div>

  <div class="field">
    <%= form.fields_for :receiver do |receiver_fields| %>
      <%= receiver_fields.label :full_name %>
      <%= receiver_fields.text_field :full_name %>
    <% end %>

    <%= form.fields_for :receiver do |receiver_fields| %>
      <%= receiver_fields.label :address %>
      <%= receiver_fields.text_area :address %>
    <% end %>

    <%= form.fields_for :receiver do |receiver_fields| %>
      <%= receiver_fields.label :mobile %>
      <%= receiver_fields.text_field :mobile %>
    <% end %>

    <%= form.fields_for :receiver do |receiver_fields| %>
      <%= receiver_fields.label :pincode %>
      <%= receiver_fields.text_field :pincode %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

